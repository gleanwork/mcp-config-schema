{
  "name": "mcp-config",
  "version": "3.1.1",
  "private": true,
  "description": "Monorepo for MCP configuration packages",
  "repository": {
    "type": "git",
    "url": "git@github.com:gleanwork/mcp-config.git"
  },
  "license": "MIT",
  "author": "Glean",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @gleanwork/mcp-config-schema && npm run build -w @gleanwork/mcp-config-glean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:all": "npm run lint && npm run typecheck && npm run test",
    "lint": "eslint packages --fix",
    "lint:package-json": "sort-package-json package.json packages/*/package.json",
    "typecheck": "npm run typecheck --workspaces",
    "format": "prettier --write 'packages/**/*.ts'"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@release-it-plugins/lerna-changelog": "^8.0.1",
    "@release-it-plugins/workspaces": "^5.0.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "release-it": "^19.2.3",
    "sort-package-json": "^3.6.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=20"
  },
  "changelog": {
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal",
      "deprecation": ":warning: Deprecation",
      "security": ":lock: Security"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
