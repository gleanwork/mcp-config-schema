{
  "name": "mcp-config",
  "version": "3.1.1",
  "private": true,
  "description": "Monorepo for MCP configuration packages",
  "repository": {
    "type": "git",
    "url": "git@github.com:gleanwork/mcp-config.git"
  },
  "license": "MIT",
  "author": "Glean",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @gleanwork/mcp-config-schema && npm run build -w @gleanwork/mcp-config-glean",
    "test": "npm run test --workspaces",
    "test:all": "npm run test:all --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "format": "npm run format --workspaces"
  },
  "devDependencies": {
    "@release-it-plugins/lerna-changelog": "^8.0.1",
    "@release-it-plugins/workspaces": "^4.2.0",
    "release-it": "^17.10.0"
  },
  "engines": {
    "node": ">=20"
  },
  "changelog": {
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal",
      "deprecation": ":warning: Deprecation",
      "security": ":lock: Security"
    }
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      },
      "@release-it-plugins/workspaces": true
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
